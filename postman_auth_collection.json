		{
			"name": "CSRF Token",
			"item": [
				{
					"name": "Get CSRF Cookie",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Estrae il CSRF token dal cookie XSRF-TOKEN",
									"var xsrfCookie = pm.cookies.get('XSRF-TOKEN');",
									"if (xsrfCookie) {",
									"    pm.environment.set('csrf_token', decodeURIComponent(xsrfCookie));",
									"    console.log('CSRF Token saved:', decodeURIComponent(xsrfCookie));",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/sanctum/csrf-cookie",
							"host": ["{{base_url}}"],
							"path": ["sanctum", "csrf-cookie"]
						},
						"description": "Ottiene il CSRF cookie necessario per le richieste POST/PUT/DELETE (opzionale con sessioni)"
					},
